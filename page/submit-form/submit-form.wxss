/* page/submit-form/submit-form.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.form-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;}


.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.input, .textarea {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  background-color: #f9f9f9;
}

.textarea {
  height: 160rpx;
  padding: 20rpx;
  line-height: 1.5;
}

/* 搜索框样式 */
.search-box {
  margin-bottom: 16rpx;
  position: relative;
}

.search-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  background-color: #f9f9f9;
}

/* 下拉列表样式 */
.dropdown-list {
  position: absolute;
  width: 100%;
  max-height: 400rpx;
  overflow-y: auto;
  background-color: #fff;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  margin-top: -16rpx;
}

.dropdown-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 28rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dropdown-item.active {
  background-color: rgba(76, 175, 80, 0.1);
}

.dropdown-item:active {
  background-color: #f5f5f5;
}

.dropdown-empty {
  padding: 30rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.selected-item {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  background-color: #f9f9f9;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.dropdown-icon {
  color: #999;
  font-size: 24rpx;
}

.dropdown-count {
  color: #4CAF50;
  font-size: 24rpx;
  margin-left: 10rpx;
}

.upload-box {
  width: 200rpx;
  height: 200rpx;
  border: 1rpx dashed #ccc;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f9f9f9;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-icon {
  font-size: 60rpx;
  color: #999;
  line-height: 1;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.product-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.product-item {
  width: calc(50% - 10rpx);
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  background-color: #f9f9f9;
  box-sizing: border-box;
}

.product-item.selected {
  border-color: #4CAF50;
  background-color: rgba(76, 175, 80, 0.1);
}

.product-name {
  font-size: 26rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.product-price {
  font-size: 24rpx;
  color: #ff6600;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin: 30rpx 0 20rpx;
  display: block;
}

.selected-products {
  margin-top: 30rpx;
}

.selected-product-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.product-info {
  flex: 1;
}

.quantity-control {
  display: flex;
  align-items: center;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #f0f0f0;
  border-radius: 30rpx;
  font-size: 32rpx;
}

.quantity-input {
  width: 80rpx;
  height: 60rpx;
  text-align: center;
  margin: 0 10rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
}

.expected-return {
  font-size: 36rpx;
  color: #ff6600;
  font-weight: bold;
}

.form-footer {
  margin-top: 60rpx;
  padding-bottom: 40rpx;
}

.submit-btn {
  background-color: #4CAF50;
  color: white;
  border-radius: 8rpx;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.submit-btn:active {
  opacity: 0.9;
}