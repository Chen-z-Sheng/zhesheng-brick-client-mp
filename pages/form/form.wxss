/* pages/form/form.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.form-options {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.form-option {
  padding: 40rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  position: relative;
}

.form-option:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.market {
  background-color: #4CAF50;
  color: white;
}

.normal {
  background-color: #2196F3;
  color: white;
}

.option-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.option-desc {
  font-size: 24rpx;
  opacity: 0.9;
}