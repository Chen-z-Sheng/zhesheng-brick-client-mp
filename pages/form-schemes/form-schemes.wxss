/* 页面整体样式 */
.page-container {
  padding-bottom: 120rpx;
  background-color: #f9f9f9;
  min-height: 100vh;
}

/* 方案选择区域样式 */
.plan-select-area {
  padding: 15rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
}

/* 商品选择区域样式 */
.product-select-area {
  padding: 15rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
}

/* 搜索输入框通用样式 */
.search-input-wrap {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.dropdown-btn {
  padding: 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

/* 方案下拉列表样式 */
.plan-dropdown {
  margin-top: 10rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  background: #fff;
  max-height: 400rpx;
  overflow-y: auto;
}

/* 商品下拉列表样式 */
.product-dropdown {
  margin-top: 10rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  background: #fff;
  max-height: 400rpx;
  overflow-y: auto;
}

/* 加载/空数据提示 */
.loading-tip, .empty-tip {
  padding: 20rpx;
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

/* 方案项样式 */
.plan-item {
  padding: 20rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.plan-item:last-child {
  border-bottom: none;
}

/* 商品项样式 */
.product-item {
  padding: 20rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.product-item:last-child {
  border-bottom: none;
}
.product-price {
  color: #f60;
  margin-left: 20rpx;
}

/* 已选商品样式 */
.selected-products {
  margin-top: 20rpx;
  padding: 10rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
}
.selected-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.selected-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
.selected-item:last-child {
  border-bottom: none;
}
.item-info {
  flex: 2;
  font-size: 26rpx;
}
.item-price {
  color: #999;
  margin-left: 10rpx;
}
.item-quantity {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}
.item-quantity input {
  width: 60rpx;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
}
.remove-btn {
  color: #f60;
}
.expected-return {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #f60;
  text-align: right;
}

/* 动态表单样式 */
.dynamic-form-container {
  padding: 15rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.required {
  color: #f00;
  margin-left: 5rpx;
}

.form-input {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.picker-input {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
}

.image-upload {
  width: 200rpx;
  height: 200rpx;
  border: 1rpx dashed #e5e5e5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.upload-placeholder {
  font-size: 24rpx;
  color: #999;
}

.form-textarea {
  min-height: 150rpx;
  padding: 20rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.checkbox-item {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

/* 按钮样式 */
.btn-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx 15rpx;
  display: flex;
  gap: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #e5e5e5;
}

.draft-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: #f5f5f5;
  color: #333;
  border-radius: 8rpx;
}

.submit-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 8rpx;
}