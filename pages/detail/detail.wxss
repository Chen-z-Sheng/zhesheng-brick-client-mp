/* pages/detail/detail.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 商品标题区域 */
.product-header {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
}

.product-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.price-section {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.price-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.price-value {
  font-size: 40rpx;
  color: #fa5151;
  font-weight: bold;
}

.update-date {
  font-size: 24rpx;
  color: #999;
  display: block;
}

/* 规格选择区域 */
.specs-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
}

.spec-group {
  margin-bottom: 20rpx;
}

.spec-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.spec-options {
  display: flex;
  flex-wrap: wrap;
}

.spec-option {
  padding: 10rpx 20rpx;
  background-color: #f2f2f2;
  border-radius: 30rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
  font-size: 26rpx;
  color: #666;
}

.spec-option.selected {
  background-color: #07c160;
  color: #fff;
}

/* 历史行情图表区域 */
.chart-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.chart-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.chart-period {
  display: flex;
}

.period-option {
  padding: 6rpx 20rpx;
  background-color: #f2f2f2;
  border-radius: 20rpx;
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.period-option.selected {
  background-color: #07c160;
  color: #fff;
}

.chart-container {
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
}

.price-chart {
  width: 100%;
  height: 100%;
}

.trend-prediction {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.trend-text {
  font-size: 26rpx;
  margin-right: 10rpx;
}

.trend-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.trend-prediction.up {
  color: #fa5151; /* 上涨红色 */
}

.trend-prediction.down {
  color: #07c160; /* 下跌绿色 */
}

/* 档口报价列表区域 */
.vendors-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.vendors-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.vendor-list {
  width: 100%;
}

.vendor-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.vendor-item:last-child {
  border-bottom: none;
}

.vendor-name {
  font-size: 28rpx;
  color: #333;
}

.vendor-price {
  font-size: 28rpx;
  color: #fa5151;
  font-weight: bold;
}